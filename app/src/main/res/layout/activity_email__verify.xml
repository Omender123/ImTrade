<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".authentication.Email_Verify">

    <TextView
        android:id="@+id/text_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Email Verify"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_signup"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/montserrat"
        android:gravity="start"
        android:text="Confirm Your Email / OTP"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/montserrat"
        android:gravity="start"
        android:text="Hello, Nice to meet you."
        android:textColor="@color/text_hint"
        android:textSize="12dp"
        android:textStyle="normal" />



    <EditText
        android:id="@+id/enter_otp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/hello"
        android:background="@drawable/verifying_textview"
        android:drawableLeft="@drawable/ic_business_and_finance"
        android:drawablePadding="15dp"
        android:hint="Enter Your OTP"
        android:inputType="numberPassword"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/text_hint" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/enter_otp"
        android:layout_marginRight="20dp"
        android:text="OTP  receive in your Email"
        android:textColor="@color/text_hint" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_done"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        app:cardBackgroundColor="@color/btn_color"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/text2"
        app:cardElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:text="Done"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/card_done"
        android:fontFamily="@font/montserrat"
        android:text="Resend OTP"
        android:onClick="Resend_OTP"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal" />



    <ImageView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bottom" />





</RelativeLayout>

</layout>