<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/card_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp">
            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cancle"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/img_cancel"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:text="Full Name"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:justificationMode="inter_word"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/img_cancel"
                android:layout_marginTop="5dp"
                android:layout_below="@id/text_name"
                android:fontFamily="@font/montserrat"
                android:text="Rz-165B B-Block, Roshan Vihar, Najafgarh \nNew Delhi-110043, Delhi, India"
                android:textColor="@color/text_login"
                android:textSize="13sp"
                android:justificationMode="inter_word"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/text_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/text_edit"
                android:layout_marginTop="8dp"
                android:layout_below="@id/text_address"
                android:fontFamily="@font/montserrat"
                android:text="Phone Number : 8766372989"
                android:textColor="@color/text_login"
                android:textSize="13sp"
                android:justificationMode="inter_word"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/text_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:background="@drawable/curved_border"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_below="@id/text_address"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>