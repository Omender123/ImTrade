<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".Fragment.Change_Email">

        <EditText
            android:id="@+id/ed_userOldEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@+id/image_edit_email"
            android:background="@drawable/verifying_textview"
            android:fontFamily="@font/poppins"
            android:hint="Old Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="#99212121"
            android:textColorHint="#99212121"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ed_usernewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@+id/image_edit_email"
            android:background="@drawable/verifying_textview"
            android:fontFamily="@font/poppins"
            android:hint="New Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="#99212121"
            android:textColorHint="#99212121"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ed_userC_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/verifying_textview"
            android:fontFamily="@font/poppins"
            android:hint="Confirm New Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="#99212121"
            android:textColorHint="#99212121"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/btn_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/verifying_textview"
            android:backgroundTint="@color/btn_color"
            android:fontFamily="@font/montserrat"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</layout>