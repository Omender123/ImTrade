<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".Fragment.Change_Email">

        <ImageView
            android:id="@+id/image_"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/background_design" />


        <EditText
            android:id="@+id/ed_userOldEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@+id/image_edit_email"
            android:background="@drawable/verifying_textview"
            android:fontFamily="@font/poppins"
            android:hint="Old Email"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textColor="@color/text_hint"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_usernewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@+id/image_edit_email"
            android:background="@drawable/verifying_textview"
            android:fontFamily="@font/poppins"
            android:hint="New Email"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textColor="@color/text_hint"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_userC_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/verifying_textview"
            android:fontFamily="@font/poppins"
            android:hint="Confirm New Email"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textColor="@color/text_hint"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/verifying_textview"
            android:fontFamily="@font/montserrat"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

</layout>