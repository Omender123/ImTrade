<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <TextView
            android:id="@+id/text_unshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/verifying_textview"
            android:fontFamily="@font/montserrat"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:text="Upto 5"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_baseline_star_24"
            android:drawableTint="@color/product_name"
            android:textColor="@color/product_name"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/text_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/checkedtoggle"
            android:backgroundTint="#4DFFC51A"
            android:fontFamily="@font/montserrat"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:text="Upto 5"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_baseline_star_24"
            android:drawableTint="@color/product_Price"

            android:textColor="@color/product_Price"
            android:textSize="10sp"
            android:textStyle="normal"
            android:visibility="gone" />


    </RelativeLayout>

</layout>