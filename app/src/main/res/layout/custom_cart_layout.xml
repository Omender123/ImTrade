<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="100dp"
            android:layout_height="115dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            app:cardBackgroundColor="#252428"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/product2" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/card"
            android:fontFamily="@font/poppins"
            android:justificationMode="inter_word"
            android:text="Product Full Name and model 123ev 8th"
            android:textColor="@color/product_Price"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/text_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/card"
            android:background="@drawable/curved_border"
            android:backgroundTint="@color/green"
            android:drawableLeft="@drawable/ic_baseline_star_24"
            android:drawablePadding="5dp"
            android:drawableTint="@color/product_Price"
            android:fontFamily="@font/poppins"
            android:paddingStart="8dp"
            android:paddingTop="3dp"
            android:paddingEnd="8dp"
            android:paddingBottom="3dp"
            android:text="4.5"
            android:textColor="@color/product_Price"
            android:textSize="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/text_rating"
            android:fontFamily="@font/poppins"
            android:text="49876 rating"
            android:textColor="#4DD8D8D8"
            android:textSize="10dp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_rating"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/card"
            android:fontFamily="@font/poppins_semibold"
            android:text="8999 Rs"
            android:textColor="@color/product_Price"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_worng_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_rating"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/product_price"
            android:background="@drawable/striking_text"
            android:fontFamily="@font/poppins"
            android:foreground="@drawable/striking_text"
            android:text="8999 Rs"
            android:textColor="@color/review_color"
            android:textSelectHandle="@color/green"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/product_Off_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_rating"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/product_worng_price"
            android:fontFamily="@font/poppins_medium"
            android:text="20 %OFF"
            android:textColor="@color/green"
            android:textSize="11sp"
            android:textStyle="normal" />


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/radio_normal"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/text_quentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Qty: "
                android:textColor="#B3D8D8D8"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="@drawable/abc_spinner_mtrl_am_alpha"
                android:backgroundTint="#3C434A"
                android:popupElevation="3dp" />

            <TextView
                android:id="@+id/text_quentity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Qty:  1 "
                android:visibility="gone"
                android:paddingBottom="3dp"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
               android:drawableTint="#3C434A"
                android:textColor="#B3D8D8D8"
                android:textSize="14dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/radio_normal"
            android:fontFamily="@font/poppins"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="Delete"
            android:textColor="#B3D8D8D8"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/delete"
            android:layout_toEndOf="@+id/layout"
            android:background="@drawable/radio_normal"
            android:fontFamily="@font/poppins"
            android:gravity="center_horizontal"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="Save For Later"
            android:textColor="#B3D8D8D8"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/save"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#4DFFFFFF"/>
    </RelativeLayout>

</layout>