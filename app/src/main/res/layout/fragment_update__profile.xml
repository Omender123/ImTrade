<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".Fragment.Update_Profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/background_design"
            android:backgroundTint="@color/toolbar_color"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_profile_image" />
        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_userName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@+id/image_edit_email"
                    android:background="@drawable/verifying_textview"
                    android:fontFamily="@font/poppins"
                    android:hint="Full Name"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="#992B2B2B"
                    android:textColorHint="#992B2B2B"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/ed_userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_toStartOf="@+id/image_edit_email"
                    android:background="@drawable/verifying_textview"
                    android:editable="false"
                    android:enabled="false"
                    android:fontFamily="@font/poppins"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textColor="#992B2B2B"
                    android:textColorHint="#992B2B2B"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/ed_userPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/verifying_textview"
                    android:fontFamily="@font/poppins"
                    android:hint="Phone No."
                    android:inputType="numberSigned"
                    android:padding="15dp"
                    android:textColor="#992B2B2B"
                    android:textColorHint="#992B2B2B"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/btn_done"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/verifying_textview"
                    android:fontFamily="@font/poppins"
                    android:text="Submit"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:backgroundTint="@color/btn_color"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>