<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".Fragment.Update_Profile">

        <ImageView
            android:id="@+id/image_"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/background_design" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/verifying_textview"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <EditText
                        android:id="@+id/ed_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:layout_toStartOf="@+id/image_edit_name"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_user_name"
                        android:drawablePadding="15dp"

                        android:enabled="false"
                        android:fontFamily="@font/montserrat"
                        android:inputType="text"
                        android:paddingStart="15dp"
                        android:text="Omender Singh"
                        android:textColor="@color/text_hint"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/image_edit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_edit_profile" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/verifying_textview"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <EditText
                        android:id="@+id/ed_email"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:layout_toStartOf="@+id/image_edit_email"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawablePadding="15dp"
                        android:enabled="false"

                        android:fontFamily="@font/montserrat"
                        android:inputType="textEmailAddress"
                        android:paddingStart="15dp"
                        android:singleLine="false"
                        android:text="omender.s@perfection.com"
                        android:textColor="@color/text_hint"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/image_edit_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_edit_profile" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/verifying_textview"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <EditText
                        android:id="@+id/ed_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:layout_toStartOf="@+id/image_edit_phone"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                        android:drawablePadding="15dp"

                        android:enabled="false"
                        android:fontFamily="@font/montserrat"
                        android:inputType="numberSigned"
                        android:paddingStart="15dp"
                        android:text="+918766372989"
                        android:textColor="@color/text_hint"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/image_edit_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_edit_profile" />


                </RelativeLayout>


                <EditText
                    android:id="@+id/ed_CurrentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@+id/image_edit_email"
                    android:background="@drawable/verifying_textview"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Current Password"
                    android:inputType="textPassword"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/ed_newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@+id/image_edit_email"
                    android:background="@drawable/verifying_textview"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btn_done"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/verifying_textview"
                    android:fontFamily="@font/montserrat"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>