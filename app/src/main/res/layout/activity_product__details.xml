<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".Activity.Product_Details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                style="@style/CustomCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardPreventCornerOverlap="true">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="20"
                    app:iss_delay="1000"
                    app:iss_period="2000" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left"/>

                <RelativeLayout
                    android:id="@+id/relative_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@drawable/ic_cart_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_shopping_cart"/>

                    <TextView
                        android:id="@+id/text_cart_Count"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:background="@drawable/ic_history"
                        android:backgroundTint="@color/purple_200"
                        android:text="1"
                        android:textSize="5dp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="100dp"
                    android:fontFamily="@font/montserrat"
                    android:justificationMode="inter_word"
                    android:text="Product Full Name and model 123ev 8th"
                    android:textColor="@color/product_Price"
                    android:textSize="18sp"
                    android:textStyle="normal" />


                <ImageView
                    android:id="@+id/image_unselect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_unslected" />

                <ImageView
                    android:id="@+id/image_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_selected"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_name"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/curved_border"
                    android:backgroundTint="@color/green"
                    android:drawableLeft="@drawable/ic_baseline_star_24"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/product_Price"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="4.5"
                    android:textColor="@color/product_Price"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_name"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/text_rating"
                    android:fontFamily="@font/montserrat"
                    android:text="49876 rating"
                    android:textColor="#4DD8D8D8"
                    android:textSize="14sp"
                    android:textStyle="normal" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_price"
                     android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentStart="true"
                    android:text="8,499 Rs"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:textSize="25sp"
                    android:textColor="@color/product_Price"
                    android:layout_below="@id/text_rating"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_worng_price"
                    android:fontFamily="@font/montserrat"
                    android:layout_toEndOf="@id/product_price"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="10dp"
                    android:text="8,499 Rs"
                    android:background="@drawable/striking_text"
                    android:foreground="@drawable/striking_text"
                    android:textSelectHandle="@color/green"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:textColor="@color/review_color"
                    android:layout_below="@id/text_rating"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_Off_price"
                    android:layout_toEndOf="@id/product_worng_price"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="22%off"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/green"
                    android:layout_below="@id/text_rating"/>

                <ImageView
                    android:id="@+id/img_border"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_below="@id/product_price"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/product_name" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/img_border"
                    android:text="Select Variant"
                    android:textColor="@color/review_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"/>


                <ImageView
                    android:id="@+id/img_border1"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_below="@id/text"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/product_name" />

               <LinearLayout
                   android:id="@+id/linearColor"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:layout_below="@id/img_border1"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Color : "
                       android:textStyle="normal"
                       android:textColor="@color/product_name"
                       android:textSize="18sp"
                       android:fontFamily="@font/montserrat"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Black"
                       android:layout_marginLeft="5dp"
                       android:textStyle="bold"
                       android:textColor="@color/product_Price"
                       android:textSize="18sp"
                       android:fontFamily="@font/montserrat"/>

                   <TextView
                       android:id="@+id/showMore"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="More"
                       android:gravity="right"
                       android:textStyle="normal"
                       android:drawableRight="@drawable/ic_baseline_arrow_down_24"
                       android:textColor="@color/review_color"
                       android:textSize="15sp"
                       android:drawableTint="@color/review_color"
                       android:fontFamily="@font/montserrat"/>

                   <TextView
                       android:id="@+id/HideMore"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="More"
                       android:visibility="gone"
                       android:gravity="right"
                       android:textStyle="normal"
                       android:drawableRight="@drawable/ic_baseline_keyboard_arrow_up_24"
                       android:drawableTint="@color/review_color"
                       android:textColor="@color/review_color"
                       android:textSize="15sp"
                       android:fontFamily="@font/montserrat"/>

               </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ColorRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    tools:itemCount="10"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/custom_color_layout"
                    android:layout_below="@id/linearColor"/>

                <ImageView
                    android:id="@+id/img_border2"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_below="@id/ColorRecyclerView"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/product_name" />
                <LinearLayout
                    android:id="@+id/linearColor1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/img_border2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Storage : "
                        android:textStyle="normal"
                        android:textColor="@color/product_name"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="64GB"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/product_Price"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat"/>

                    <TextView
                        android:id="@+id/showMore1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:gravity="right"
                        android:textStyle="normal"
                        android:drawableRight="@drawable/ic_baseline_arrow_down_24"
                        android:textColor="@color/review_color"
                        android:textSize="15sp"
                        android:drawableTint="@color/review_color"
                        android:fontFamily="@font/montserrat"/>

                    <TextView
                        android:id="@+id/HideMore1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:visibility="gone"
                        android:gravity="right"
                        android:textStyle="normal"
                        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_up_24"
                        android:drawableTint="@color/review_color"
                        android:textColor="@color/review_color"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/storageRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    tools:itemCount="10"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/custom_brands_toggle_layout"
                    android:layout_below="@id/linearColor1"/>


                <ImageView
                    android:id="@+id/img_border3"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_below="@id/storageRecyclerView"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/product_name" />
                <ImageView
                    android:id="@+id/img_border4"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_below="@id/img_border3"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/product_name" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>