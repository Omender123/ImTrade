<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/card_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp">


            <ImageView
                android:id="@+id/place_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_gravity="center|center_vertical"
                android:background="@drawable/circlr_shape"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@mipmap/near_by_me"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/place_image"
                android:fontFamily="@font/montserrat"
                android:text="Grocery Store"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/place_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/place_name"
                android:layout_toEndOf="@+id/place_image"
                android:fontFamily="@font/montserrat"
                android:text="A store selling foodstuffs and various household supplies."
                android:textColor="@color/text_login"
                android:textSize="13sp"
                android:textStyle="normal" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>



</layout>