<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".Authentication.Login">

        <TextView
            android:id="@+id/text_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_signup"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="Welcome Back"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/create"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="Hello, Nice to meet you."
            android:textColor="@color/text_hint"
            android:textSize="12dp"
            android:textStyle="normal" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/hello"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/verifying_textview"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="15dp"
            android:hint="Email or Phone No."
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/text_hint" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/email"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/verifying_textview"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/text_hint" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_Login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/password"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="@color/btn_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_Login"
            android:layout_marginTop="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="end"
            android:text="Forgot Password"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/or_sinUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="or Login with"
            android:textColor="@color/text_login"
            android:textSize="15dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/or_sinUp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <soup.neumorphism.NeumorphImageView
                android:id="@+id/do_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="go_to_google"
                android:src="@drawable/ic_google"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shadowColorDark="@color/dark_shadow"
                app:neumorph_shadowColorLight="@color/LIGHT_sadow"
                app:neumorph_shadowElevation="6dp"
                app:neumorph_shapeAppearance="@style/NeumorphismImageLarge"
                app:neumorph_shapeType="flat" />



            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/background"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

            <soup.neumorphism.NeumorphImageView
                android:id="@+id/do_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="go_to_fb"
                android:visibility="visible"
                android:src="@drawable/ic_facebook"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shadowColorDark="@color/dark_shadow"
                app:neumorph_shadowColorLight="@color/LIGHT_sadow"
                app:neumorph_shadowElevation="6dp"
                app:neumorph_shapeAppearance="@style/NeumorphismImageLarge"
                app:neumorph_shapeType="flat" />
<!--

            <soup.neumorphism.NeumorphImageView
                android:id="@+id/do_insta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@drawable/ic_insta"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shadowColorDark="@color/dark_shadow"
                app:neumorph_shadowColorLight="@color/LIGHT_sadow"
                app:neumorph_shadowElevation="6dp"
                app:neumorph_shapeAppearance="@style/NeumorphismImageLarge"
                app:neumorph_shapeType="flat" />
-->


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/Skip"
            android:layout_marginBottom="-20dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingStart="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I Dont Have Account"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/text_sign_up1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="SignUp"
                android:textColor="@color/btn_color"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="-3dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:drawingCacheQuality="auto"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_skip" />


        <View
            android:id="@+id/Skip"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>


          </RelativeLayout>


</layout>