<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImTrade" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/bottom_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
      <!--  <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
      -->
        <!-- Status bar color. -->
        <item name="android:colorPrimaryDark">@color/bottom_bar</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ImTrade.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="statusBarBackground">@color/bottom_bar</item>
    </style>

    <style name="NeumorphismImageLarge">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">10dp</item>
    </style>

    <style name="CustomCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:color">@color/white</item>
        <item name="tabIconTint">@color/white</item>
    </style>

    <style name="Theme.ImTrade.NavigationView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="itemStrokeColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
</style>

    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">100dp</item>


    </style>
</resources>